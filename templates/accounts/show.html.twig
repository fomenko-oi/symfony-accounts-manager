{% extends 'base.html.twig' %}

{% block title %}Account list{% endblock %}

{% block body %}
{{ knp_menu_render('show_account') }}

<div class="example-wrapper">
    <h1>
        Account #{{ account.id }}
        <a class="btn btn-danger float-right" href="#" onclick="return confirm('Are you sure want to delete this account?')">Delete</a>
        <a class="btn btn-success float-right" href="{{ path('accounts.edit', {id: account.id}) }}">Edit</a>
    </h1>

    <div class="alert alert-primary">
        Category: <span class="badge badge-secondary">#{{ account.category.id }}: {{ account.category.name }}</span>
    </div>

    <div class="">
        <table class="table table-bordered table-striped">
            <tbody>
            <tr>
                <th>ID</th><td>{{ account.id }}</td>
            </tr>
            <tr>
                <th>Login</th><td>{{ account.login }}</td>
            </tr>
            <tr>
                <th>Password</th><td>{{ account.password }}</td>
            </tr>
            {% for field in account.fieldsValues %}
                <tr>
                    <th>{{ field.field.name }}</th><td>{{ field.value }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    <a class="btn btn-primary" href="{{ path('category.show', {id: account.category.id}) }}">Go to category</a>
</div>
{% endblock %}
