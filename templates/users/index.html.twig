{% extends 'base.html.twig' %}

{% block title %}Users list{% endblock %}

{% block body %}
    <div class="example-wrapper">
        <h1>Users</h1>

        <table class="table table-bordered">
            <thead>
            <tr class="text-center">
                <th>ID</th>
                <th>Email</th>
                <th>Created At</th>
                <th>Role</th>
                <th></th>
            </tr>
            </thead>

            <tbody>
            {% for user in users %}
                <tr>
                    <td class="text-center">{{ user.id }}</td>
                    <td>{{ user.email.value }}</td>
                    <td>{{ user.date|date }}</td>
                    <td class="text-center">
                        {% if user.role.isAdmin %}
                            <span class="badge badge-success">Admin</span>
                        {% elseif user.role.isUser %}
                            <span class="badge badge-primary">User</span>
                        {% endif %}
                    </td>
                    <td>
                        <a href="{{ path('users.show', { user: user.id }) }}" class="btn-sm btn-primary">Show</a>
                        <a href="{{ path('users.edit', { user: user.id }) }}" class="btn-sm btn-success">Edit</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
